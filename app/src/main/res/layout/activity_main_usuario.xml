<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="MENU SOCIO"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/LabelNombreLic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingLeft="10dp"
        android:text="Nombre"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:ems="10"
            android:text="Consulta tu deuda, ve tu historial de pagos mensuales"
            tools:fontFamily="casual"
            android:gravity="center"/>

        <Button
            android:layout_width="173dp"
            android:layout_height="113dp"
            android:text="Consulta pagos"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="156dp"
            android:layout_height="120dp"
            android:text="Actualiza tus Datos"
            android:textSize="20sp"
            android:id="@+id/socioDatos"/>

        <TextView
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="Actualiza tus datos, cambia tu dirección, teléfono, ubicación en el mapa o toma una foto de tu oficina"
            tools:fontFamily="casual"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="Programa un cobro, recuerda al cobrador del Colegio de Auditores pasar por tu oficina"
            tools:fontFamily="casual"
            android:gravity="center"/>

        <Button
            android:layout_width="167dp"
            android:layout_height="129dp"
            android:layout_gravity="clip_horizontal"
            android:text="Programar Cobro"
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/salirSocio"
            android:layout_width="81dp"
            android:layout_height="64dp"
            android:layout_gravity="clip_horizontal"
            android:background="@drawable/logout"
            android:textSize="20sp" />
        <TextView
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:ems="10"

            android:layout_gravity="center_horizontal"
            android:text="Salir"/>

    </LinearLayout>
</LinearLayout>